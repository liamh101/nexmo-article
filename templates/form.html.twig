{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-center">Phone Debugger</h1>

    <form action="/call" method="post">
        <div class="form-group">
            <label for="number">Number:</label>
            <input required type="text"  class="form-control" id="number" name="number">
        </div>
        <div class="form-group">
            <label for="message">Message:</label>
            <textarea required id="message" name="message" class="form-control"></textarea>
        </div>

        <div>
            <button type="submit" class="btn btn-primary">Call Number</button>
        </div>
    </form>
{% endblock %}